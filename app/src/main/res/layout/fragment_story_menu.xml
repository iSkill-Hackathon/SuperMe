<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".StoryActivity"
    android:baselineAligned="false"
    android:nestedScrollingEnabled="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Me" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Action" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/viral_button"
            android:src="@drawable/ic_cake_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            />

        <ImageButton
            android:id="@+id/scorpies_button"
            android:src="@drawable/ic_mood_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           />

        <ImageButton
            android:id="@+id/bull_basher_button"
            android:src="@drawable/ic_notifications_off_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
         />

        <ImageButton
            android:id="@+id/mad_mocker_button"
            android:src="@drawable/ic_school_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />


    </GridLayout>
</LinearLayout>
