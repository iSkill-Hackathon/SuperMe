<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="3"
    android:rowCount="2"
    android:gravity="center"
    android:background="@drawable/splatter_background"

    tools:context="ie.mylifesolutions.superme.tools.AssertiveToolsFragment">

    <!--Temporary image just for testing-->
    <ImageView

        android:src="@drawable/contact_page_envelope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/tool_slider"
            android:layout_width="120dp"
            android:layout_margin="10dp"
            android:layout_height="120dp" />
        <ImageView
            android:src="@drawable/tool_stop_shield"
            android:layout_width="120dp"
            android:layout_margin="10dp"
            android:layout_height="120dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/tool_broken_record"
            android:layout_width="120dp"
            android:layout_margin="10dp"
            android:layout_height="120dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/tool_funnies"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:src="@drawable/tool_eye_contact"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </LinearLayout>

</LinearLayout>
